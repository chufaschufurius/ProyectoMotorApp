<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="50dip" />
        <stroke android:width="0dip" android:color="#3F51B5" />
        <gradient android:angle="-90" android:startColor="#9E9E9E" android:endColor="#727272"  />
    </shape>
</item>
<item android:state_focused="true">
<shape android:shape="rectangle"  >
    <corners android:radius="50dip" />
    <stroke android:width="0dip" android:color="#455A64" />
    <solid android:color="#B6B6B6"/>
</shape>
</item>
<item >
<shape android:shape="rectangle"  >
    <corners android:radius="50dip" />
    <stroke android:width="0dip" android:color="#3F51B5" />
    <gradient android:angle="-90" android:startColor="#B6B6B6" android:endColor="#9E9E9E" />
</shape>
</item>
</selector>